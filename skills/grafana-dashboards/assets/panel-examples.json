{
  "_note": "Panel and templating snippets (structure-focused). Grafana JSON varies by version and datasource; treat these as patterns.",
  "panels": {
    "stat_total_requests": {
      "type": "stat",
      "title": "Total Requests",
      "targets": [
        {
          "expr": "sum(http_requests_total)"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 80, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      }
    },
    "timeseries_cpu": {
      "type": "graph",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"
        }
      ],
      "yaxes": [
        {"format": "percent", "max": 100, "min": 0},
        {"format": "short"}
      ]
    },
    "table_up": {
      "type": "table",
      "title": "Service Status",
      "targets": [
        {
          "expr": "up",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "indexByName": {},
            "renameByName": {
              "instance": "Instance",
              "job": "Service",
              "Value": "Status"
            }
          }
        }
      ]
    },
    "heatmap_latency": {
      "type": "heatmap",
      "title": "Latency Heatmap",
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_bucket[5m])) by (le)",
          "format": "heatmap"
        }
      ],
      "dataFormat": "tsbuckets",
      "yAxis": {
        "format": "s"
      }
    }
  },
  "templating": {
    "query_variables": {
      "templating": {
        "list": [
          {
            "name": "namespace",
            "type": "query",
            "datasource": "Prometheus",
            "query": "label_values(kube_pod_info, namespace)",
            "refresh": 1,
            "multi": false
          },
          {
            "name": "service",
            "type": "query",
            "datasource": "Prometheus",
            "query": "label_values(kube_service_info{namespace=\"$namespace\"}, service)",
            "refresh": 1,
            "multi": true
          }
        ]
      }
    },
    "example_query": "sum(rate(http_requests_total{namespace=\"$namespace\", service=~\"$service\"}[5m]))"
  },
  "alerts": {
    "legacy_dashboard_alert_example": {
      "alert": {
        "name": "High Error Rate",
        "conditions": [
          {
            "evaluator": {"params": [5], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"type": "avg"},
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "5m",
        "frequency": "1m",
        "message": "Error rate is above 5%",
        "noDataState": "no_data",
        "notifications": [
          {"uid": "slack-channel"}
        ]
      }
    }
  }
}
